extends layout

block content
   if(available)
      include ./header.pug
      h3 Contact Us

      form(action='/team_name_url/' method='post')
      label(for='team_name') Enter name: 
      input#contact_name(type='text' name='name_field' placeholder="Name field")
      br
      textarea#contact_text(name='w3review' rows='4' cols='50')
      br
      input(type='submit' value='OK')
      include ./footer.pug
   else
      h2 This page is unavailble right now 
      h3 We are only available during working hours (Monday to Friday,  from 9 to 17).      